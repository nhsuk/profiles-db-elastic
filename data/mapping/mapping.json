{
  "settings":{
    "analysis":{
      "analyzer":{
        "gp_name_analyzer":{
          "type":"custom",
          "tokenizer":"standard",
          "filter":[
            "lowercase",
            "gp_stop"
          ]
        }
      },
      "filter":{
        "gp_stop":{
          "type":"stop",
          "stopwords": ["doctor", "doctors", "dr", "drs" ]
        }
      }
    }
  },
  "mappings": {
    "gps": {
      "properties": {
        "acceptingNewPatients": {
          "type": "boolean"
        },
        "address": {
          "properties": {
            "addressLines": {
              "type": "text",
              "analyzer": "gp_name_analyzer",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "postcode": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "displayName": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "doctors": {
          "type": "text",
          "analyzer": "gp_name_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "location": {
          "properties": {
            "coordinates": {
              "type": "float"
            },
            "type": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "name": {
          "type": "text",
          "analyzer": "gp_name_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  }
}
