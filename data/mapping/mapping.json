{
  "settings":{
    "analysis":{
      "analyzer":{
        "gp_name_analyzer":{
          "type":"custom",
          "tokenizer":"name_tokenizer",
          "filter":[ "lowercase", "gp_title_stop" ]
        },
        "surgery_name_analyzer":{
          "type":"custom",
          "tokenizer":"standard",
          "filter":[ "lowercase" ]
        }
      },
      "tokenizer": {
        "name_tokenizer": {
          "type": "pattern",
          "pattern": "[^a-zA-Z']+"
        }
      },
      "filter":{
        "gp_title_stop":{
          "type":"stop",
          "stopwords": [ "doctor", "doctors", "dr", "drs" ]
        },
        "gp_stop":{
          "type":"stop",
          "stopwords": [ 
            "and",
            "the",
            "&",
            "doctor",
            "doctors",
            "dr",
            "drs",
            "partners",
            "practice",
            "surgery",
            "medical",
            "health",
            "centre",
            "center" ]
        }
      }
    }
  },
  "mappings": {
    "gps": {
      "properties": {
        "acceptingNewPatients": {
          "type": "boolean"
        },
        "address": {
          "properties": {
            "addressLines": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "postcode": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "displayName": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "doctors2": {
          "type": "nested",
          "properties": {
             "name" : {
               "type": "string",
               "analyzer": "gp_name_analyzer"
             }
          }
        },
        "location": {
          "type": "geo_point"
        },
        "name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "name2": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  }
}
